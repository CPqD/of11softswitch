#define N_NXM_DL_TYPES 2

#define NXM_DL_NONE   (0, 0)
#define NXM_DL_ARP    (ETH_TYPE_ARP, 0)
#define NXM_DL_IP     (ETH_TYPE_IP, 0)
#define NXM_DL_IPV6   (ETH_TYPE_IPV6, 0)
#define NXM_DL_IP_ANY (ETH_TYPE_IP, ETH_TYPE_IPV6)

#define DEFINE_FIELD_M(HEADER, WILDCARD, DL_TYPES, NW_PROTO)  \
    DEFINE_FIELD(HEADER, WILDCARD, DL_TYPES, NW_PROTO)        \
    DEFINE_FIELD(HEADER##_W, WILDCARD, DL_TYPES, NW_PROTO)

/*             NXM_ suffix     FWW_* bit     dl_types       nw_proto      
             ------------    ------------  -----------    ------------- */
DEFINE_FIELD  (OF_IN_PORT,     OFPFW_IN_PORT  ,  NXM_DL_NONE, 0 )
DEFINE_FIELD_M(OF_ETH_DST,     0,            NXM_DL_NONE,     0 )
DEFINE_FIELD  (OF_ETH_SRC,     OFPFW_DL_SRC,   NXM_DL_NONE,     0 )
DEFINE_FIELD  (OF_ETH_TYPE,    OFPFW_DL_TYPE,  NXM_DL_NONE,     0 )
DEFINE_FIELD_M(OF_VLAN_TCI,    0,            NXM_DL_NONE,     0 )
DEFINE_FIELD  (OF_IP_TOS,      OFPFW_NW_TOS,   NXM_DL_IP_ANY,   0 )
DEFINE_FIELD  (OF_IP_PROTO,    OFPFW_NW_PROTO, NXM_DL_IP_ANY,   0 )
DEFINE_FIELD_M(OF_IP_SRC,      0,            NXM_DL_IP,       0 )
DEFINE_FIELD_M(OF_IP_DST,      0,            NXM_DL_IP,       0 )
DEFINE_FIELD  (OF_TCP_SRC,     OFPFW_TP_SRC,   NXM_DL_IP_ANY, IPPROTO_TCP)
DEFINE_FIELD  (OF_TCP_DST,     OFPFW_TP_DST,   NXM_DL_IP_ANY, IPPROTO_TCP)
DEFINE_FIELD  (OF_UDP_SRC,     OFPFW_TP_SRC,   NXM_DL_IP_ANY, IPPROTO_UDP)
DEFINE_FIELD  (OF_UDP_DST,     OFPFW_TP_DST,   NXM_DL_IP_ANY, IPPROTO_UDP)
DEFINE_FIELD  (OF_ICMP_TYPE,   OFPFW_TP_SRC,   NXM_DL_IP,     IPPROTO_ICMP)
DEFINE_FIELD  (OF_ICMP_CODE,   OFPFW_TP_DST,   NXM_DL_IP,     IPPROTO_ICMP)
DEFINE_FIELD  (OF_ARP_OP,      OFPFW_NW_PROTO, NXM_DL_ARP,      0)
DEFINE_FIELD_M(OF_ARP_SPA,     0,            NXM_DL_ARP,      0)
DEFINE_FIELD_M(OF_ARP_TPA,     0,            NXM_DL_ARP,      0)
DEFINE_FIELD  (NX_ARP_SHA,     OFPFW_ARP_SHA,  NXM_DL_ARP,      0)
DEFINE_FIELD  (NX_ARP_THA,     OFPFW_ARP_THA,  NXM_DL_ARP,      0)
DEFINE_FIELD_M(NX_IPV6_SRC,    0,            NXM_DL_IPV6,     0)
DEFINE_FIELD_M(NX_IPV6_DST,    0,            NXM_DL_IPV6,     0)
DEFINE_FIELD  (NX_ICMPV6_TYPE, OFPFW_TP_SRC,   NXM_DL_IPV6, IPPROTO_ICMPV6)
DEFINE_FIELD  (NX_ICMPV6_CODE, OFPFW_TP_DST,   NXM_DL_IPV6, IPPROTO_ICMPV6)
DEFINE_FIELD  (NX_ND_TARGET,   OFPFW_ND_TARGET,NXM_DL_IPV6, IPPROTO_ICMPV6)
DEFINE_FIELD  (NX_ND_SLL,      OFPFW_ARP_SHA,  NXM_DL_IPV6, IPPROTO_ICMPV6)
DEFINE_FIELD  (NX_ND_TLL,      OFPFW_ARP_THA,  NXM_DL_IPV6, IPPROTO_ICMPV6)


#undef DEFINE_FIELD
